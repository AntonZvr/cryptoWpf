<Page x:Class="WpfApp.ConverterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp" xmlns:viewmodels="clr-namespace:WpfApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:CurrencyConverterViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConverterPage">

    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

        <ComboBox x:Name="sourceCurrencyCombo" Grid.Row="0" ItemsSource="{Binding Rates}" SelectedItem="{Binding TargetCurrency}" DisplayMemberPath="Id" />
        <ComboBox x:Name="targetCurrencyCombo" Grid.Row="1" ItemsSource="{Binding Rates}" SelectedItem="{Binding SourceCurrency}" DisplayMemberPath="Id" />

        <TextBox x:Name="amountText" Grid.Row="2" Text="{Binding Amount}" />
        <TextBlock x:Name="resultText" Grid.Row="3" Text="{Binding Result}" />
</Grid>

</Page>
