<Page x:Class="WpfApp.DetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Crypto Detail">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Coin.Name, StringFormat='Coin Name: {0}'}" FontSize="24" FontWeight="Bold" />
            <TextBlock Text="{Binding Coin.PriceUsd, StringFormat='Price: {0} USD'}" FontSize="18" />
            <TextBlock Text="{Binding Coin.VolumeUsd24Hr, StringFormat='Volume: {0}'}" FontSize="16" />
            <TextBlock Text="{Binding Coin.ChangePercent24Hr, StringFormat='Change(24 h): {0}%'}" FontSize="16" />
        </StackPanel>
    </Grid>
</Page>
